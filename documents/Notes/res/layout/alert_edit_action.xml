<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@id/update_alert"
        style="@style/Widget.AttachmentItem"
        android:drawableLeft="@drawable/ic_alarm_edit"
        android:text="@string/alert_edit_action_update" />

    <View
        android:layout_width="1.0px"
        android:layout_height="fill_parent"
        android:background="@color/attachment_line_color" />

    <TextView
        android:id="@id/delete_alert"
        style="@style/Widget.AttachmentItem"
        android:drawableLeft="@drawable/ic_alarm_remove"
        android:text="@string/alert_edit_action_delete" />

</LinearLayout>