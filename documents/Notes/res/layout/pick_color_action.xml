<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginBottom="1.0dip"
    android:layout_marginLeft="5.0dip"
    android:layout_marginRight="5.0dip"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <FrameLayout
        android:id="@id/pick_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/color_picker_margin_size"
        android:background="@drawable/color_picker_yellow" >

        <ImageView
            android:id="@id/iv_bg_yellow_select"
            style="@style/Widget.ColorSelector" />
    </FrameLayout>

    <FrameLayout
        android:id="@id/pick_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/color_picker_margin_size"
        android:background="@drawable/color_picker_white" >

        <ImageView
            android:id="@id/iv_bg_white_select"
            style="@style/Widget.ColorSelector" />
    </FrameLayout>

    <FrameLayout
        android:id="@id/pick_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/color_picker_margin_size"
        android:background="@drawable/color_picker_red" >

        <ImageView
            android:id="@id/iv_bg_red_select"
            style="@style/Widget.ColorSelector" />
    </FrameLayout>

    <FrameLayout
        android:id="@id/pick_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/color_picker_margin_size"
        android:background="@drawable/color_picker_green" >

        <ImageView
            android:id="@id/iv_bg_green_select"
            style="@style/Widget.ColorSelector" />
    </FrameLayout>

    <FrameLayout
        android:id="@id/pick_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/color_picker_blue" >

        <ImageView
            android:id="@id/iv_bg_blue_select"
            style="@style/Widget.ColorSelector" />
    </FrameLayout>

</LinearLayout>