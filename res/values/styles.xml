<resources>

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar"></style>

    <style name="NoteCheckboxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>

    <style name="NoteTextAppearance" parent="android:TextAppearance">
        <item name="android:textColorLink">#0000ff</item>
    </style>

    <style name="TextAppearanceSuper" parent="NoteTextAppearance">
        <item name="android:textSize">@dimen/text_font_size_super</item>
    </style>

    <style name="TextAppearanceLarge" parent="NoteTextAppearance">
        <item name="android:textSize">@dimen/text_font_size_large</item>
    </style>

    <style name="TextAppearanceMedium" parent="NoteTextAppearance">
        <item name="android:textSize">@dimen/text_font_size_medium</item>
    </style>

    <style name="TextAppearanceNormal" parent="NoteTextAppearance">
        <item name="android:textSize">@dimen/text_font_size_normal</item>
    </style>

    <style name="TextAppearance_List_Time">
        <item name="android:textSize">@dimen/text_font_size_normal</item>
        <item name="android:textColor">@color/primary_text_dark</item>
    </style>

    <style name="TextAppearance_List_Title">
        <item name="android:textSize">@dimen/text_font_size_normal</item>
        <item name="android:textColor">@color/primary_text_dark</item>
    </style>

    <style name="TextAppearanceNoteEdit">
        <item name="android:textSize">@dimen/text_font_size_normal</item>
        <item name="android:textColor">@color/primary_text_dark</item>
    </style>

</resources>